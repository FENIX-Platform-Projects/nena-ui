<div>
    <table class='table table-striped table-bordered table-responsive table-hover table-condensed'>
        <thead>
        <tr>
            <th>
                Province
            </th>
            <th>
                Area Cultivated (ha)
            </th>
            <th>
                Area Affected (ha)
            </th>
            <th>
                Percentage (%)
            </th>
        </tr>

        </thead>
        <tbody>
        {{#each rows}}
            <tr>
                <td>
                    {{this.label}}
                </td>
                <td>
                    {{this.area_cultivated}}
                </td>
                <td>
                    {{this.area_affected}}
                </td>
                <td>
                    {{this.percentage}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>